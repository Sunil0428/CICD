pipeline {
    agent {
        label 'Agent-1'
    }

    environment {
        EC2_HOST = "mysql.mydevops.tech" // Replace with your EC2 instance public IP
    }

    stages {
        stage('Connect to EC2') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'ssh-auth', user: 'ec2-user', pass: 'DevOps321')]) {
                    sh '''
                    sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$EC2_HOST 
                    echo "Connected successfully!"
                    '''
                }
            }
        }
    }
}